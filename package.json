{
  "name": "layouts",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "vitest run --coverage",
    "test:ci": "set CI=true&& vitest run --coverage",
    "test:verbose": "set CI=true&& vitest run --coverage --reporter=verbose",
    "test:watch": "vitest",
    "lint": "node ./scripts/run-eslint.mjs"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.4",
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/platform-browser": "^20.1.0",
    "@angular/router": "^20.1.0",
    "@ng-bootstrap/ng-bootstrap": "19.0.1",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.6",
    "fts-frontui": "^20.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@analogjs/vite-plugin-angular": "1.19.2",
    "@analogjs/vitest-angular": "1.19.2",
    "@angular/build": "^20.1.3",
    "@angular/cli": "^20.1.3",
    "@angular/compiler-cli": "20.1.3",
    "@angular-devkit/build-angular": "20.1.3",
    "@eslint/js": "9.32.0",    
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "9.32.0",
    "angular-eslint": "20.1.1",
    "typescript-eslint": "8.38.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.3",
    "prettier": "3.6.2",
    "stylelint": "16.22.0",
    "stylelint-config-recommended-scss": "15.0.1",
    "@types/jasmine": "~5.1.0",
    "typescript": "~5.8.3",    
    "jsdom": "26.1.0",
    "junit": "1.4.9",
    "vitest": "3.2.4"
  }
