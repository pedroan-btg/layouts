{
    "type": "motorhome",
    "version": 2,
    "description": "Schema completo de formulário dinâmico do tipo Motorhome, abrangendo todos os tipos, widgets, validações e dependências.",
    "fields": [
        // ====================== IDENTIFICAÇÃO VEICULAR ======================
        {
            "name": "plateNumber",
            "labelKey": "FIELDS.PLATE_NUMBER",
            "type": "string",
            "widget": "text",
            "order": 1,
            "tabIndex": 1,
            "required": true,
            "validations": [{
                    "name": "pattern",
                    "value": "^[A-Z]{3}-[0-9]{4}$",
                    "message": "Formato inválido. Ex: ABC-1234"
                }
            ],
            "ui": {
                "mask": "AAA-0000",
                "placeholder": "ABC-1234",
                "tooltipKey": "TOOLTIPS.PLATE_NUMBER"
            }
        }, {
            "name": "chassisNumber",
            "labelKey": "FIELDS.CHASSIS_NUMBER",
            "type": "string",
            "widget": "text",
            "order": 2,
            "tabIndex": 2,
            "required": true,
            "validations": [{
                    "name": "minLength",
                    "value": 17
                }, {
                    "name": "maxLength",
                    "value": 17
                }
            ],
            "ui": {
                "placeholder": "Número do chassi (17 caracteres)"
            }
        }, {
            "name": "manufacturer",
            "labelKey": "FIELDS.MANUFACTURER",
            "type": "string",
            "widget": "autocomplete",
            "order": 3,
            "tabIndex": 3,
            "required": true,
            "ui": {
                "dataSource": "api/manufacturers",
                "placeholder": "Selecione o fabricante"
            }
        }, {
            "name": "model",
            "labelKey": "FIELDS.MODEL",
            "type": "string",
            "widget": "autocomplete",
            "order": 4,
            "tabIndex": 4,
            "required": true,
            "ui": {
                "dataSource": "api/models/motorhome",
                "placeholder": "Selecione o modelo"
            }
        }, {
            "name": "manufactureYear",
            "labelKey": "FIELDS.MANUFACTURE_YEAR",
            "type": "number",
            "widget": "number",
            "order": 5,
            "tabIndex": 5,
            "required": true,
            "validations": [{
                    "name": "min",
                    "value": 1980
                }, {
                    "name": "maxDateYear",
                    "value": "today"
                }
            ],
            "ui": {
                "mask": "0000",
                "placeholder": "Ex: 2021"
            }
        }, {
            "name": "color",
            "labelKey": "FIELDS.COLOR",
            "type": "string",
            "widget": "text",
            "order": 6,
            "tabIndex": 6,
            "validations": [{
                    "name": "pattern",
                    "value": "^[A-Za-zÀ-ÿ\\s]+$"
                }
            ],
            "ui": {
                "placeholder": "Cor principal"
            }
        }, {
            "name": "fuelType",
            "labelKey": "FIELDS.FUEL_TYPE",
            "type": "enum",
            "widget": "select",
            "order": 7,
            "tabIndex": 7,
            "values": [
                "FUEL.DIESEL",
                "FUEL.GASOLINE",
                "FUEL.ELECTRIC",
                "FUEL.HYBRID"
            ],
            "validations": [{
                    "name": "required"
                }
            ]
        }, {
            "name": "transmissionType",
            "labelKey": "FIELDS.TRANSMISSION_TYPE",
            "type": "enum",
            "widget": "select",
            "order": 8,
            "tabIndex": 8,
            "values": [
                "TRANSMISSION.MANUAL",
                "TRANSMISSION.AUTOMATIC"
            ]
        },
        // ====================== ENERGIA E SUSTENTABILIDADE ======================
        {
            "name": "hasSolarPanels",
            "labelKey": "FIELDS.HAS_SOLAR_PANELS",
            "type": "boolean",
            "widget": "checkbox",
            "order": 9,
            "tabIndex": 9
        }, {
            "name": "solarPowerCapacity",
            "labelKey": "FIELDS.SOLAR_POWER_CAPACITY",
            "type": "number",
            "widget": "number",
            "order": 10,
            "tabIndex": 10,
            "dependencies": {
                "visibleIf": {
                    "field": "hasSolarPanels",
                    "equals": true
                }
            },
            "validations": [{
                    "name": "min",
                    "value": 100
                }, {
                    "name": "max",
                    "value": 1000
                }
            ],
            "ui": {
                "suffix": "Watts"
            }
        }, {
            "name": "batteryType",
            "labelKey": "FIELDS.BATTERY_TYPE",
            "type": "enum",
            "widget": "select",
            "order": 11,
            "tabIndex": 11,
            "values": [
                "BATTERY.LITHIUM",
                "BATTERY.ACID",
                "BATTERY.GEL"
            ]
        }, {
            "name": "batteryCapacity",
            "labelKey": "FIELDS.BATTERY_CAPACITY",
            "type": "number",
            "widget": "number",
            "order": 12,
            "tabIndex": 12,
            "validations": [{
                    "name": "min",
                    "value": 50
                }, {
                    "name": "max",
                    "value": 600
                }
            ],
            "ui": {
                "suffix": "Ah",
                "placeholder": "Ex: 200Ah"
            }
        }, {
            "name": "hasGenerator",
            "labelKey": "FIELDS.HAS_GENERATOR",
            "type": "boolean",
            "widget": "checkbox",
            "order": 13,
            "tabIndex": 13
        }, {
            "name": "generatorPower",
            "labelKey": "FIELDS.GENERATOR_POWER",
            "type": "number",
            "widget": "number",
            "order": 14,
            "tabIndex": 14,
            "dependencies": {
                "visibleIf": {
                    "field": "hasGenerator",
                    "equals": true
                }
            },
            "ui": {
                "suffix": "kVA",
                "placeholder": "Ex: 2.5"
            }
        },
        // ====================== CONFORTO E INSTALAÇÕES ======================
        {
            "name": "hasBathroom",
            "labelKey": "FIELDS.HAS_BATHROOM",
            "type": "boolean",
            "widget": "checkbox",
            "order": 15,
            "tabIndex": 15
        }, {
            "name": "showerType",
            "labelKey": "FIELDS.SHOWER_TYPE",
            "type": "enum",
            "widget": "select",
            "order": 16,
            "tabIndex": 16,
            "dependencies": {
                "visibleIf": {
                    "field": "hasBathroom",
                    "equals": true
                }
            },
            "values": [
                "SHOWER.INTERNAL",
                "SHOWER.EXTERNAL",
                "SHOWER.BOTH"
            ]
        }, {
            "name": "hasHotWater",
            "labelKey": "FIELDS.HAS_HOT_WATER",
            "type": "boolean",
            "widget": "checkbox",
            "order": 17,
            "tabIndex": 17
        }, {
            "name": "kitchenType",
            "labelKey": "FIELDS.KITCHEN_TYPE",
            "type": "enum",
            "widget": "select",
            "order": 18,
            "tabIndex": 18,
            "values": [
                "KITCHEN.INTERNAL",
                "KITCHEN.EXTERNAL",
                "KITCHEN.BOTH"
            ]
        }, {
            "name": "hasFridge",
            "labelKey": "FIELDS.HAS_FRIDGE",
            "type": "boolean",
            "widget": "checkbox",
            "order": 19,
            "tabIndex": 19
        }, {
            "name": "hasMicrowave",
            "labelKey": "FIELDS.HAS_MICROWAVE",
            "type": "boolean",
            "widget": "checkbox",
            "order": 20,
            "tabIndex": 20
        },
        // ====================== SEGURANÇA ======================
        {
            "name": "hasFireExtinguisher",
            "labelKey": "FIELDS.HAS_FIRE_EXTINGUISHER",
            "type": "boolean",
            "widget": "checkbox",
            "order": 21,
            "tabIndex": 21
        }, {
            "name": "hasFirstAidKit",
            "labelKey": "FIELDS.HAS_FIRST_AID_KIT",
            "type": "boolean",
            "widget": "checkbox",
            "order": 22,
            "tabIndex": 22
        }, {
            "name": "hasGPS",
            "labelKey": "FIELDS.HAS_GPS",
            "type": "boolean",
            "widget": "checkbox",
            "order": 23,
            "tabIndex": 23
        }, {
            "name": "hasReverseCamera",
            "labelKey": "FIELDS.HAS_REVERSE_CAMERA",
            "type": "boolean",
            "widget": "checkbox",
            "order": 24,
            "tabIndex": 24
        }, {
            "name": "hasAlarm",
            "labelKey": "FIELDS.HAS_ALARM",
            "type": "boolean",
            "widget": "checkbox",
            "order": 25,
            "tabIndex": 25
        }, {
            "name": "tirePressureSystem",
            "labelKey": "FIELDS.TIRE_PRESSURE_SYSTEM",
            "type": "boolean",
            "widget": "checkbox",
            "order": 26,
            "tabIndex": 26
        },
        // ====================== MANUTENÇÃO E DOCUMENTOS ======================
        {
            "name": "insuranceExpiration",
            "labelKey": "FIELDS.INSURANCE_EXPIRATION",
            "type": "date",
            "widget": "datepicker",
            "order": 27,
            "tabIndex": 27,
            "validations": [{
                    "name": "notPast",
                    "value": true
                }, {
                    "name": "maxDiffMonths",
                    "value": 12
                }
            ]
        }, {
            "name": "lastMaintenanceDate",
            "labelKey": "FIELDS.LAST_MAINTENANCE_DATE",
            "type": "date",
            "widget": "calendar",
            "order": 28,
            "tabIndex": 28,
            "validations": [{
                    "name": "notFuture"
                }, {
                    "name": "maxDiffMonths",
                    "value": 24
                }
            ]
        }, {
            "name": "maintenanceWorkshop",
            "labelKey": "FIELDS.MAINTENANCE_WORKSHOP",
            "type": "string",
            "widget": "text",
            "order": 29,
            "tabIndex": 29,
            "ui": {
                "placeholder": "Oficina ou técnico responsável"
            }
        }, {
            "name": "hasInspectionReport",
            "labelKey": "FIELDS.HAS_INSPECTION_REPORT",
            "type": "boolean",
            "widget": "checkbox",
            "order": 30,
            "tabIndex": 30
        }, {
            "name": "inspectionReportFile",
            "labelKey": "FIELDS.INSPECTION_REPORT_FILE",
            "type": "file",
            "widget": "fileupload",
            "order": 31,
            "tabIndex": 31,
            "dependencies": {
                "visibleIf": {
                    "field": "hasInspectionReport",
                    "equals": true
                }
            },
            "validations": [{
                    "name": "fileTypes",
                    "value": [".pdf", ".jpg"]
                }, {
                    "name": "maxSizeMB",
                    "value": 5
                }
            ]
        },
        // ====================== AVALIAÇÃO E FINALIZAÇÃO ======================
        {
            "name": "estimatedValue",
            "labelKey": "FIELDS.ESTIMATED_VALUE",
            "type": "number",
            "widget": "text",
            "order": 32,
            "tabIndex": 32,
            "ui": {
                "mask": "currency",
                "prefix": "R$",
                "placeholder": "Ex: R$ 250.000,00"
            }
        }, {
            "name": "vehiclePhotos",
            "labelKey": "FIELDS.VEHICLE_PHOTOS",
            "type": "file",
            "widget": "fileupload",
            "order": 33,
            "tabIndex": 33,
            "validations": [{
                    "name": "fileTypes",
                    "value": [".jpg", ".png"]
                }, {
                    "name": "maxFiles",
                    "value": 10
                }
            ]
        }, {
            "name": "confirmation",
            "labelKey": "FIELDS.CONFIRMATION",
            "type": "boolean",
            "widget": "confirmDialog",
            "order": 34,
            "tabIndex": 34,
            "ui": {
                "confirmationText": "Confirmar envio das informações do motorhome?",
                "confirmLabel": "Confirmar",
                "cancelLabel": "Cancelar"
            }
        }
    ],
    "ui": {
        "order": [
            "plateNumber", "chassisNumber", "manufacturer", "model", "manufactureYear", "color", "fuelType", "transmissionType",
            "hasSolarPanels", "solarPowerCapacity", "batteryType", "batteryCapacity", "hasGenerator", "generatorPower",
            "hasBathroom", "showerType", "hasHotWater", "kitchenType", "hasFridge", "hasMicrowave",
            "hasFireExtinguisher", "hasFirstAidKit", "hasGPS", "hasReverseCamera", "hasAlarm", "tirePressureSystem",
            "insuranceExpiration", "lastMaintenanceDate", "maintenanceWorkshop", "hasInspectionReport", "inspectionReportFile",
            "estimatedValue", "vehiclePhotos", "confirmation"
        ],
        "actions": {
            "addField": false,
            "removeField": false,
            "save": true
        }
    }
}
